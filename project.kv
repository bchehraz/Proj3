<Project>:
	AnchorLayout: 	
		anchor_x: 'center'
		anchor_y: 'bottom'
		orientation: 'horizontal'
		spacing: 10
		SoundControls:
			id: _sound_controls
			size_hint: 1, None
			height: 48		
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'center' 
		size_hint: 1, 1
		pos_hint: -1, 1
		SoundAnalysis: 
			id: _sound_analysis
			height: 24
    AnchorLayout:
    	anchor_x: 'right'
		anchor_y: 'top'	
		size_hint_x: -.65
    	size_hint_y: -.9
        Sound: 
        	id: _sound
        	height: 24
